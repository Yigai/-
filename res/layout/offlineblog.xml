<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="标题："
        android:textSize="18sp" />

    <TextView
        android:id="@+id/blog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:textColor="@android:color/background_dark"
        android:text="123"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/blog_bloger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_title"
        android:textColor="@color/list_item_other"
        android:text="blog_bloger"
        android:layout_marginLeft="15dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/blog_uptime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_bloger"
        android:layout_marginLeft="15dp"
        android:text="blog_uptime"
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/blog_storetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_uptime"
        android:layout_marginLeft="15dp"
        android:textColor="#999999"
        android:text="blog_stime"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/blog_summaryscan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_storetime"
        android:text="预览："
        android:textSize="18sp" />

    <TextView
        android:id="@+id/blog_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blog_summaryscan"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:text="blog_sumaary"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/blog_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/blogImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/attach_32" />

    </LinearLayout>

</RelativeLayout>